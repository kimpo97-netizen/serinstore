                            time: 'ÏÇ¨Ïö¥ÎìúÏ≤¥ÌÅ¨ 1ÏãúÍ∞ÑÏ†Ñ ÎòêÎäî Í≥µÏó∞ÏãúÏûë 2ÏãúÍ∞ÑÏ†Ñ ÏòàÏ†ï',
                            note: 'ÎãπÏùº ÌòÑÏû• ÏÉÅÌô©Ïóê Îî∞Îùº Ïû•ÏÜå Î∞è ÏãúÍ∞ÑÏùÄ Î≥ÄÍ≤ΩÎê† Ïàò ÏûàÏñ¥Ïöî.'
                        }
                    },
                ]
            };

            // [NEW] Fetch reviews from Google Sheets
            const fetchReviews = async () => {
                try {
                    const response = await fetch(`${GOOGLE_SCRIPT_URL}?type=reviews`, { redirect: 'follow' });
                    const result = await response.json();
                    if (result.result === 'success' && Array.isArray(result.data)) {
                         if (result.data.length > 0) {
                            setReviews([...result.data, ...INITIAL_REVIEWS]); 
                        }
                    }
                } catch (e) {
                    console.log("Î¶¨Î∑∞ Î°úÎî© Ïã§Ìå®:", e);
                }
            };
            
            useEffect(() => {
                fetchReviews();
            }, []);

            const checkRefundStatus = (item) => {
                // ... (Í∏∞Ï°¥ Î°úÏßÅ Ïú†ÏßÄ)
                if (!item) return { title: 'ÏòàÏïΩ Ï∑®ÏÜå', msg: 'Ï∑®ÏÜåÌïòÏãúÍ≤†ÏäµÎãàÍπå?', type: 'normal' };
                
                if (!item.status || item.status === 'ÏòàÏïΩÏã†Ï≤≠') {
                     return {
                        title: 'ÏòàÏïΩ Ï∑®ÏÜå',
                        msg: 'ÏïÑÏßÅ ÏòàÏïΩÏù¥ ÌôïÏ†ïÎêòÏßÄ ÏïäÏïòÏäµÎãàÎã§.\nÏã†Ï≤≠ÏùÑ Ï∑®ÏÜåÌïòÏãúÍ≤†ÏäµÎãàÍπå?',
                        type: 'simple_cancel'
                    };
                }

                const total = parseInt(item.totalPrice) || 0;
                const now = new Date();

                let rentalStartDate = null;
                try {
                    if (item.startDate) {
                        const dateParts = item.startDate.split('.').map(p => parseInt(p.trim())).filter(n => !isNaN(n));
                        if (dateParts.length >= 3) {
                            rentalStartDate = new Date(dateParts[0], dateParts[1] - 1, dateParts[2]);
                            rentalStartDate.setHours(0, 0, 0, 0);
                        }
                    }
                } catch(e) {}

                if (rentalStartDate) {
                    const today = new Date();
                    today.setHours(0, 0, 0, 0);
                    const diffTime = rentalStartDate.getTime() - today.getTime();
                    const diffDays = Math.ceil(diffTime / (1000 * 60 * 60 * 24));
                    
                    if (diffDays <= 2) {
                        return {
                            title: 'ÏòàÏïΩ Ï∑®ÏÜå Î∞è ÌôòÎ∂à ÏïàÎÇ¥',
                            type: 'refund_calc',
                            total: total,
                            penalty: total, 
                            refund: 0,
                            reason: 'rental_imminent' 
                        };
                    }
                }

                let orderDate = new Date(); 
                
                try {
                    const timeStr = item.orderTime || '';
                    const parts = timeStr.match(/(\d+)\.\s*(\d+)\.\s*(\d+)\.\s*(Ïò§Ï†Ñ|Ïò§ÌõÑ)\s*(\d+):(\d+):(\d+)/);
                    if (parts) {
                        let year = parseInt(parts[1]);
                        let month = parseInt(parts[2]) - 1;
                        let day = parseInt(parts[3]);
                        let hour = parseInt(parts[5]);
                        let minute = parseInt(parts[6]);
                        let second = parseInt(parts[7]);
                        if (parts[4] === 'Ïò§ÌõÑ' && hour !== 12) hour += 12;
                        if (parts[4] === 'Ïò§Ï†Ñ' && hour === 12) hour = 0;
                        orderDate = new Date(year, month, day, hour, minute, second);
                    } else {
                        const parsed = new Date(timeStr);
                        if (!isNaN(parsed.getTime())) orderDate = parsed;
                    }
                } catch(e) {}

                const diffHours = (now - orderDate) / (1000 * 60 * 60);
                const isWithin24Hours = diffHours < 24;

                const penalty = isWithin24Hours ? 0 : 10000;
                const refundAmount = Math.max(0, total - penalty);

                return {
                    title: 'ÏòàÏïΩ Ï∑®ÏÜå Î∞è ÌôòÎ∂à ÏïàÎÇ¥',
                    type: 'refund_calc',
                    total: total,
                    penalty: penalty,
                    refund: refundAmount,
                    reason: isWithin24Hours ? 'within_24h' : 'after_24h',
                    isWithin24Hours: isWithin24Hours
                };
            };

            const handleCancelRequest = async () => {
                if (!cancelTargetItem) return;
                
                setIsSubmitting(true);
                setTimeout(() => {
                    setIsSubmitting(false);
                    setIsCancelModalOpen(false);
                    alert("Ï∑®ÏÜå ÏöîÏ≤≠Ïù¥ Ï†ïÏÉÅÏ†ÅÏúºÎ°ú Ï†ëÏàòÎêòÏóàÏñ¥Ïöî! üò¢\nÎã¥ÎãπÏûêÍ∞Ä ÌôïÏù∏ ÌõÑ Îπ†Î•¥Í≤å Ï≤òÎ¶¨Ìï¥ ÎìúÎ¶¥Í≤åÏöî.");
                }, 1000);
            };

            const getReviewTag = (modelName) => {
                if (modelName.includes('S23')) return '23U';
                if (modelName.includes('S24')) return '24U';
                if (modelName.includes('S25')) return '25U';
                if (modelName.includes('17 ÌîÑÎ°úÎß•Ïä§')) return '17PM';
                if (modelName.includes('17 ÌîÑÎ°ú')) return '17P';
                return modelName;
            };

            const phones = {
                galaxy: [
                    { id: 'g23', name: 'S23Ïö∏Ìä∏Îùº', basePrice: 25000, addPrice: 5000, tag: '23U', reviews: 842 },
                    { id: 'g24', name: 'S24Ïö∏Ìä∏Îùº', basePrice: 30000, addPrice: 6000, tag: '24U', reviews: 523 },
                    { id: 'g25', name: 'S25Ïö∏Ìä∏Îùº', basePrice: 40000, addPrice: 7000, tag: '25U', reviews: 328 },
                ],
                iphone: [
                    { id: 'i17p', name: 'ÏïÑÏù¥Ìè∞ 17ÌîÑÎ°ú', basePrice: 50000, addPrice: 12000, tag: '17P', reviews: 102 },
                    { id: 'i17pm', name: 'ÏïÑÏù¥Ìè∞ 17ÌîÑÎ°úÎß•Ïä§', basePrice: 55000, addPrice: 14000, tag: '17PM', reviews: 41 },
                ]
            };
            
            const daysOfWeek = ['Ïùº', 'Ïõî', 'Ìôî', 'Ïàò', 'Î™©', 'Í∏à', 'ÌÜ†'];

            // [UPDATE] ÎãπÏùºÎ∞òÎÇ© ÎãπÏùº Î∞òÎÇ© ÏòµÏÖò Ï∂îÍ∞Ä(ÎãπÏùº/Í≥µÏó∞Ïû•) Í∞ÄÎä• ÎÇ†Ïßú Ï∂îÍ∞Ä (3Ïõî 8, 15, 22, 29Ïùº ÏùºÏöîÏùº ÎπÑÌôúÏÑ±Ìôî)
            const AVAILABLE_ONSITE_DATES = [
                '2025-5-5', '2025-12-25', '2026-1-1',
                '2026-3-6', '2026-3-7',
                '2026-3-13', '2026-3-14',
                '2026-3-20', '2026-3-21',
                '2026-3-27', '2026-3-28'
            ];
            
            useEffect(() => {
                if (endDate && returnMethod === 'post') {
                    const year = endDate.getFullYear();
                    const month = endDate.getMonth() + 1;
                    const day = endDate.getDate();
                    const dateKey = `${year}-${month}-${day}`;
                    
                    const isRestrictedDay = endDate.getDay() === 0 || endDate.getDay() === 6 || !!HOLIDAYS[dateKey];
                    const isSameDayRental = startDate && startDate.getTime() === endDate.getTime();

                    if (isRestrictedDay || isSameDayRental) {
                        setReturnMethod(null);
                    }
                }
            }, [endDate, startDate]); 

            useEffect(() => {
                if (startDate && deliveryMethod === 'post') {
                    if (isSameDayStart || isPostDeadlinePassed) {
                        setDeliveryMethod(null); 
                    }
                }
            }, [startDate, isSameDayStart, isPostDeadlinePassed]);

            useEffect(() => {
                const savedUser = localStorage.getItem('pink_user');
                if (savedUser) {
                    const { name, phone } = JSON.parse(savedUser);
                    setLookupName(name);
                    setLookupPhone(phone);
                    handleLookup(name, phone);
                }
            }, []);

            const formatNameMasking = (name) => {
                if (!name || name.length < 2) return name;
                if (name.length === 2) return name[0] + '*';
                return name[0] + '*' + name[name.length - 1];
            };

            const openReviewModal = (item) => {
                setCurrentReviewItem(item);
                const existingReview = myReviews.find(r => r.id === item.myReviewId);
                
                if (existingReview) {
                    setReviewForm({ rating: existingReview.rating, text: existingReview.text, image: existingReview.image });
                } else {
                    setReviewForm({ rating: 5, text: '', image: null });
                }
                
                setIsReviewModalOpen(true);
            };

            const handleImageChange = (e) => {
                const file = e.target.files[0];
                if (file) {
                    const reader = new FileReader();
                    reader.onloadend = () => {
                        setReviewForm(prev => ({ ...prev, image: reader.result }));
                    };
                    reader.readAsDataURL(file);
                }
            };

            // [UPDATE] Î¶¨Î∑∞ Ï†úÏ∂ú Ïãú Íµ¨Í∏Ä ÏãúÌä∏Î°ú Ï†ÑÏÜ°ÌïòÎèÑÎ°ù ÏàòÏ†ï
            const handleReviewSubmit = async () => {
                if (!reviewForm.text.trim()) {
                    alert("ÌõÑÍ∏∞ ÎÇ¥Ïö©ÏùÑ ÏûÖÎ†•Ìï¥Ï£ºÏÑ∏Ïöî!");
                    return;
                }

                const newReviewId = currentReviewItem.myReviewId || Date.now();
                const reviewData = {
                    category: 'Î¶¨Î∑∞ÏûëÏÑ±', 
                    id: newReviewId,
                    model: currentReviewItem.model,
                    rating: reviewForm.rating,
                    text: reviewForm.text,
                    name: formatNameMasking(lookupName || userInfo.name || "ÏùµÎ™Ö"), 
                    phone: currentReviewItem.phone || lookupPhone || userInfo.phone, // Ï∂îÍ∞ÄÎêú Î∂ÄÎ∂Ñ: Ïó∞ÎùΩÏ≤ò Ï†ÑÏÜ°
                    date: new Date().toLocaleString('ko-KR'), // Ï∂îÍ∞ÄÎêú Î∂ÄÎ∂Ñ: ÎÇ†Ïßú+ÏãúÍ∞Ñ Ìè¨Îß∑
                    image: reviewForm.image 
                };

                let updatedMyReviews;
                if (currentReviewItem.myReviewId) {
                    updatedMyReviews = myReviews.map(r => r.id === newReviewId ? reviewData : r);
                } else {
                    updatedMyReviews = [reviewData, ...myReviews];
                    currentReviewItem.myReviewId = newReviewId;
                }
                setMyReviews(updatedMyReviews);
                localStorage.setItem('pink_my_reviews', JSON.stringify(updatedMyReviews));

                try {
                    await fetch(GOOGLE_SCRIPT_URL, {
                        method: "POST",
                        headers: { "Content-Type": "text/plain;charset=utf-8" },
                        body: JSON.stringify(reviewData),
                        redirect: 'follow'
                    });
                    
                    alert("ÏÜåÏ§ëÌïú ÌõÑÍ∏∞Í∞Ä Îì±Î°ùÎêòÏóàÏäµÎãàÎã§! üíñ\nÌôà ÌôîÎ©¥ÏóêÎèÑ Í≥ß Î∞òÏòÅÎê©ÎãàÎã§.");
                    fetchReviews(); // Refresh reviews
                    setIsReviewModalOpen(false);
                } catch (error) {
                    console.error("Î¶¨Î∑∞ Ï†ÑÏÜ° Ïã§Ìå®:", error);
                    alert("ÌõÑÍ∏∞ Îì±Î°ù Ï§ë Ïò§Î•òÍ∞Ä Î∞úÏÉùÌñàÏäµÎãàÎã§. (ÎÑ§Ìä∏ÏõåÌÅ¨ ÌôïÏù∏)");
                }
            };

            const handleRecommendation = () => {
                let rec = { name: '', reason: '', icon: '' };
                if (recSeat === 'floor') {
                    rec = { name: 'Í∞§Îü≠Ïãú S25 Ïö∏Ìä∏Îùº', reason: 'ÎààÏïûÏóê ÏûàÎäî Í≤ÉÏ≤òÎüº ÏÉùÏÉùÌïòÍ≤å! Ïñ¥ÎëêÏö¥ Í≥≥ÏóêÏÑúÎèÑ ÏôÑÎ≤ΩÌïú ÏµúÏã†ÏÉÅ S25UÎ•º Ï∂îÏ≤úÌï¥Ïöî! ‚ú®', icon: 'Android' };
                } else if (recSeat === '1f') {
                    rec = { name: 'Í∞§Îü≠Ïãú S25 Ïö∏Ìä∏Îùº', reason: 'Ï†ÅÎãπÌïú Í±∞Î¶¨ÏóêÏÑú Í≥†ÌôîÏßà ÏòÅÏÉÅÍ≥º ÏÇ¨ÏßÑÏùÑ Î™®Îëê Ïû°ÏúºÎ†§Î©¥ S25UÍ∞Ä Îî±Ïù¥ÏóêÏöî! üì∏', icon: 'Android' };
                } else if (recSeat === '2f') {
                    rec = { name: 'Í∞§Îü≠Ïãú S24 Ïö∏Ìä∏Îùº', reason: 'Í±∞Î¶¨Í∞Ä Ï°∞Í∏à ÏûàÎã§Î©¥ Ï§å Í∏∞Îä•Ïù¥ Í∞ïÎ†•ÌïòÍ≥† ÏïàÏ†ïÏ†ÅÏù∏ S24UÎ°ú ÏÑ†Î™ÖÌïòÍ≤å ÎãπÍ≤® Ï∞çÏúºÏÑ∏Ïöî! üî≠', icon: 'Android' };
                } else {
                    rec = { name: 'Í∞§Îü≠Ïãú S23 Ïö∏Ìä∏Îùº', reason: 'Î©ÄÎ¶¨ÏÑúÎèÑ ÎÇ¥ Í∞ÄÏàòÎ•º ÎààÏïûÏóê! Í∞ÄÏÑ±ÎπÑ ÏµúÍ≥†Ïùò 100Î∞∞ Ï§å S23UÎ•º Ï∂îÏ≤úÎìúÎ†§Ïöî! üåï', icon: 'Android' };
                }
                setRecResult(rec);
            };

            const isSameDayStart = startDate && (() => {
                const today = new Date();
                today.setHours(0,0,0,0);
                return startDate.getTime() === today.getTime();
            })();

            const isSundayOrHolidayStart = startDate && (() => {
                const year = startDate.getFullYear();
                const month = startDate.getMonth();
                const day = startDate.getDate();
                const dateKey = `${year}-${month + 1}-${day}`;
                return startDate.getDay() === 0 || !!HOLIDAYS[dateKey];
            })();

            const isPostDeadlinePassed = startDate && (() => {
                const today = new Date();
                today.setHours(0, 0, 0, 0);
                let limitDate = new Date(today);
                let addedBusinessDays = 0;
                while (addedBusinessDays < 1) {
                    limitDate.setDate(limitDate.getDate() + 1);
                    const y = limitDate.getFullYear();
                    const m = limitDate.getMonth();
                    const d = limitDate.getDate();
                    const key = `${y}-${m + 1}-${d}`;
                    if (limitDate.getDay() !== 0 && limitDate.getDay() !== 6 && !HOLIDAYS[key]) {
                        addedBusinessDays++;
                    }
                }
                return startDate <= limitDate;
            })();

            const formatPhone = (value) => {
                const raw = value.replace(/[^0-9]/g, '');
                if (raw.length < 4) return raw;
                if (raw.length < 8) return `${raw.slice(0, 3)}-${raw.slice(3)}`;
                return `${raw.slice(0, 3)}-${raw.slice(3, 7)}-${raw.slice(7, 11)}`;
            };

            const handleAddressSearch = () => {
                if (!window.daum || !window.daum.Postcode) {
                    alert("Ïö∞Ìé∏Î≤àÌò∏ ÏÑúÎπÑÏä§Î•º Î∂àÎü¨Ïò§Îäî Ï§ëÏûÖÎãàÎã§. Ïû†Ïãú ÌõÑ Îã§Ïãú ÏãúÎèÑÌï¥Ï£ºÏÑ∏Ïöî.");
                    return;
                }
                new daum.Postcode({
                    oncomplete: function(data) {
                        let fullAddress = data.address;
                        let extraAddress = '';
                        if (data.addressType === 'R') {
                            if (data.bname !== '') extraAddress += data.bname;
                            if (data.buildingName !== '') extraAddress += (extraAddress !== '' ? `, ${data.buildingName}` : data.buildingName);
                            fullAddress += (extraAddress !== '' ? ` (${extraAddress})` : '');
                        }
                        setUserInfo(prev => ({ ...prev, zipcode: data.zonecode, address: fullAddress }));
                    }
                }).open();
            };

            const copyToClipboard = (text) => {
                const textArea = document.createElement("textarea");
                textArea.value = text;
                document.body.appendChild(textArea);
                textArea.select();
                try {
                    document.execCommand('copy');
                    alert('Í≥ÑÏ¢åÎ≤àÌò∏Í∞Ä Î≥µÏÇ¨ÎêòÏóàÏäµÎãàÎã§!');
                } catch (err) {
                    console.error('Copy failed', err);
                    alert('Î≥µÏÇ¨Ïóê Ïã§Ìå®ÌñàÏäµÎãàÎã§. ÏßÅÏ†ë ÏûÖÎ†•Ìï¥Ï£ºÏÑ∏Ïöî.');
                }
                document.body.removeChild(textArea);
            };

            const isHoliday = (date) => {
                const year = date.getFullYear();
                const month = date.getMonth() + 1;
                const day = date.getDate();
                const dateKey = `${year}-${month}-${day}`;
                const dayOfWeek = date.getDay(); 
                return dayOfWeek === 0 || dayOfWeek === 6 || !!HOLIDAYS[dateKey];
            };

            const getNextBusinessDay = (date) => {
                let nextDate = new Date(date);
                while (isHoliday(nextDate)) {
                    nextDate.setDate(nextDate.getDate() + 1);
                }
                return nextDate;
            };

            const getReturnDate = (date) => {
                if (!date) return null;
                return new Date(date);
            };

            const getArrivalDate = (date) => {
                if (!date) return null;
                return new Date(date);
            };

            const calculateDays = () => {
                if (!startDate || !endDate) return 0;
                const diffTime = endDate.getTime() - startDate.getTime();
                const diffDays = Math.ceil(diffTime / (1000 * 60 * 60 * 24));
                return Math.max(0, diffDays + 1); 
            };
            
            const calculateTotal = () => {
                const days = calculateDays();
                if (days === 0 || !selectedPhone) return 0;
                
                let total = 0;
                if (days <= 2) {
                    total = selectedPhone.basePrice;
                } else {
                    total = selectedPhone.basePrice + ((days - 2) * selectedPhone.addPrice);
                }
                
                if (insurance === 'basic') total += 3000;
                else if (insurance === 'premium') total += 5000;
                else if (insurance === 'none') total += 0;

                total += batteryCount * 3000;
                
                if (deliveryMethod === 'post') total += 4000;
                if (deliveryMethod === 'venue') total += 4000; 

                if (returnMethod === 'pickup') total += 4000;
                if (returnMethod === 'sameday') total += 10000;
                
                if (dataBackup) total += 10000;

                // [UPDATE] Ìï†Ïù∏ Í∏àÏï° Î≥ÄÍ≤Ω
                if (discounts.twitter) total -= 4000; // X(Ìä∏ÏúÑÌÑ∞) 4000Ïõê
                if (discounts.blog) total -= 5000;   // Î∏îÎ°úÍ∑∏ 5000Ïõê
                if (discounts.kakao) total -= 4000;  // Ïπ¥Ïπ¥Ïò§Îßµ 4000Ïõê

                return Math.max(0, total);
            };

            const getStatusClass = (status) => {
                if (!status) return 'bg-gray-200 text-gray-500';
                if (status.includes('ÌôïÏ†ï')) return 'bg-green-100 text-green-600';
                if (status.includes('Ï∑®ÏÜå') || status.includes('ÌôòÎ∂à')) return 'bg-red-100 text-red-600';
                return 'bg-gray-200 text-gray-500';
            };

            const formatDisplayDate = (val) => {
                if (!val) return '-';
                if (String(val).includes('ÎÖÑ') || String(val).includes('(')) return val;
                
                const date = new Date(val);
                if (isNaN(date.getTime())) return val; 

                const year = date.getFullYear().toString().slice(2);
                const month = date.getMonth() + 1;
                const day = date.getDate();
                return `${year}ÎÖÑ ${month}Ïõî ${day}Ïùº`;
            };
            
            const resetDates = () => {
                setStartDate(null);
                setEndDate(null);
                setDateWarning(null);
            };

            const handleSubmit = async () => {
                if(!GOOGLE_SCRIPT_URL) {
                    alert("Íµ¨Í∏Ä ÏãúÌä∏ Ïó∞Îèô URLÏù¥ ÏÑ§Ï†ïÎêòÏßÄ ÏïäÏïòÏäµÎãàÎã§. Í∞úÎ∞úÏûêÏóêÍ≤å Î¨∏ÏùòÌï¥Ï£ºÏÑ∏Ïöî.");
                    return;
                }

                setIsSubmitting(true);
                const formatDateDot = (d) => d ? `${d.getFullYear()}. ${d.getMonth()+1}. ${d.getDate()}` : '';
                const getShortModelName = (fullName) => {
                    if (fullName.includes('S23')) return '23U';
                    if (fullName.includes('S24')) return '24U';
                    if (fullName.includes('S25')) return '25U';
                    // [UPDATE] ÏïÑÏù¥Ìè∞ ÏïΩÏñ¥ ÏàòÏ†ï (17Max -> 17PM, 17Pro -> 17P)
                    if (fullName.includes('17 ÌîÑÎ°úÎß•Ïä§')) return '17PM';
                    if (fullName.includes('17 ÌîÑÎ°ú')) return '17P';
                    return fullName;
                };

                // [UPDATE] Î≥¥Ï°∞Î∞∞ÌÑ∞Î¶¨ ÏÑ†ÌÉù Ïãú Î™®Îç∏Î™Ö Îí§Ïóê '+Î≥¥Ï°∞Î∞∞ÌÑ∞Î¶¨' ÌÖçÏä§Ìä∏ Ï∂îÍ∞Ä
                let finalModelName = getShortModelName(selectedPhone.name);
                if (batteryCount > 0) {
                    finalModelName += "+Î≥¥Ï°∞Î∞∞ÌÑ∞Î¶¨";
                }

                const fullAddress = `${userInfo.address} ${userInfo.detailAddress}`.trim();

                let insuranceText = 'ÎØ∏ÏÑ†ÌÉù';
                if(insurance === 'none') insuranceText = 'ÎØ∏Í∞ÄÏûÖ';
                else if(insurance === 'basic') insuranceText = 'Î≤†Ïù¥ÏßÅ';
                else if(insurance === 'premium') insuranceText = 'ÌîÑÎ¶¨ÎØ∏ÏóÑ';

                // [UPDATE] Î¶¨Î∑∞ ÌÖçÏä§Ìä∏ Îß§Ìïë ÏàòÏ†ï
                let reviewText = '';
                if (discounts.twitter) reviewText = 'Ìä∏ÏúÑÌÑ∞';
                else if (discounts.blog) reviewText = 'Î∏îÎ°úÍ∑∏';
                else if (discounts.kakao) reviewText = 'Ïπ¥Ïπ¥Ïò§Îßµ';
                else reviewText = 'ÏÑ†ÌÉùÏïàÌï®';

                let deliveryText = 'ÎØ∏ÏÑ†ÌÉù';
                if (deliveryMethod === 'post') deliveryText = 'ÌÉùÎ∞∞ÏàòÎ†π';
                else if (deliveryMethod === 'quick') deliveryText = 'ÌÄµÏàòÎ†π';
                else if (deliveryMethod === 'venue') deliveryText = 'Í≥µÏó∞Ïû•ÏàòÎ†π';
                else if (deliveryMethod === 'office') deliveryText = 'ÏÇ¨Î¨¥Ïã§ÏàòÎ†π';

                let returnText = 'ÎØ∏ÏÑ†ÌÉù';
                if (returnMethod === 'pickup') returnText = 'Î∞©Î¨∏ÏàòÍ±∞';
                else if (returnMethod === 'post') returnText = 'ÌÉùÎ∞∞Î∞òÎÇ©';
                else if (returnMethod === 'office') returnText = 'ÏÇ¨Î¨¥Ïã§Î∞òÎÇ©';
                else if (returnMethod === 'sameday') returnText = 'ÎãπÏùºÎ∞òÎÇ©';
                else if (returnMethod === 'venue') returnText = 'Í≥µÏó∞Ïû•Î∞òÎÇ©';

                // [NEW] Í≤∞Ï†úÏàòÎã® ÌÖçÏä§Ìä∏ Î≥ÄÌôò
                let paymentText = paymentMethod === 'transfer' ? 'Í≥ÑÏ¢åÏù¥Ï≤¥' : 'ÎÑ§Ïù¥Î≤ÑÏä§ÌÜ†Ïñ¥Í≤∞Ï†ú';

                const total = calculateTotal();
                const orderData = {
                    orderTime: new Date().toLocaleString('ko-KR'),
                    status: 'ÏòàÏïΩÏã†Ï≤≠',
                    battery: batteryCount > 0 ? 'Î≥¥Ï°∞Î∞∞ÌÑ∞Î¶¨' : '',
                    model: finalModelName, // [UPDATE] Í≤∞Ìï©Îêú Î™®Îç∏Î™Ö ÏÇ¨Ïö© (Ïòà: 23U+Î≥¥Ï°∞Î∞∞ÌÑ∞Î¶¨)
                    name: userInfo.name,
                    zipcode: `'${userInfo.zipcode}`, 
                    address: fullAddress,
                    phone: userInfo.phone,
                    scheduleName: userInfo.scheduleName || `${userInfo.name}Îãò ÎåÄÏó¨`, 
                    startDate: formatDateDot(startDate),
                    delivery: deliveryText,
                    endDate: formatDateDot(getReturnDate(endDate)),
                    returnMethod: returnText,
                    review: reviewText,
                    insurance: insuranceText,
                    paymentMethod: paymentText, // [NEW] Í≤∞Ï†úÏàòÎã® Ï∂îÍ∞Ä
                    totalPrice: total,
                    trackingNumber: '',
                    dataBackup: dataBackup ? 'Ïã†Ï≤≠' : '',
                    category: 'ÏòàÏïΩÏã†Ï≤≠' 
                };

                try {
                    await fetch(GOOGLE_SCRIPT_URL, {
                        method: "POST",
                        headers: { "Content-Type": "text/plain;charset=utf-8" },
                        body: JSON.stringify(orderData),
                    });
                    
                    setSuccessData({
                        type: 'ÏòàÏïΩ',
                        name: userInfo.name,
                        amount: total,
                        paymentMethod: paymentMethod // [NEW] ÏÑ±Í≥µ ÌôîÎ©¥ Î∂ÑÍ∏∞Î•º ÏúÑÌï¥ Ï∂îÍ∞Ä
                    });
                    setViewMode('success');

                } catch (error) {
                    console.error("Error submitting order:", error);
                    alert("Ï£ºÎ¨∏ Ï†ÑÏÜ° Ï§ë Ïò§Î•òÍ∞Ä Î∞úÏÉùÌñàÏäµÎãàÎã§. Îã§Ïãú ÏãúÎèÑÌï¥Ï£ºÏÑ∏Ïöî.");
                    setIsSubmitting(false);
                }
            };
            
            const handleGoHome = () => {
                setStep(1); 
                setSelectedPhone(null); 
                setStartDate(null); 
                setEndDate(null); 
                setInsurance('none');
                setUserInfo({ name: '', phone: '', zipcode: '', address: '', detailAddress: '', scheduleName: '' });
                setDataBackup(false);
                setDeliveryMethod(null);
                setReturnMethod(null);
                // [UPDATE] Ìï†Ïù∏ ÏÉÅÌÉú Ï¥àÍ∏∞Ìôî
                setDiscounts({ twitter: false, blog: false, kakao: false });
                setPaymentMethod('transfer'); // [NEW] Í≤∞Ï†úÏàòÎã® Ï¥àÍ∏∞Ìôî
                setSuccessData(null); 
                setIsSubmitting(false);
                setActiveNav('home');
                setViewMode('dashboard');
            };

            const handleExtensionSubmit = async (extTotal) => {
                if (!extForm.name || !extForm.phone) {
                    alert("Ïã†Ï≤≠Ïûê ÏÑ±Ìï®Í≥º Ïó∞ÎùΩÏ≤òÎ•º ÏûÖÎ†•Ìï¥Ï£ºÏÑ∏Ïöî.");
                    return;
                }
                if(!GOOGLE_SCRIPT_URL) {
                    alert("ÏãúÏä§ÌÖú Ïò§Î•ò: Ïó∞Îèô URL ÎØ∏ÏÑ§Ï†ï");
                    return;
                }

                setIsSubmitting(true);
                const orderData = {
                    category: 'Ïó∞Ïû•Ïã†Ï≤≠',
                    orderTime: new Date().toLocaleString('ko-KR'),
                    model: extModel === 'galaxy' ? 'Í∞§Îü≠Ïãú (Ïó∞Ïû•)' : 'ÏïÑÏù¥Ìè∞ (Ïó∞Ïû•)',
                    name: extForm.name,
                    phone: extForm.phone,
                    startDate: `(+${extDays}Ïùº)`,
                    totalPrice: extTotal,
                    scheduleName: `${extForm.name}Îãò Ïó∞Ïû•Ïã†Ï≤≠`
                };

                try {
                    await fetch(GOOGLE_SCRIPT_URL, {
                        method: "POST",
                        headers: { "Content-Type": "text/plain;charset=utf-8" },
                        body: JSON.stringify(orderData),
                    });
                    setSuccessData({
                        type: 'Ïó∞Ïû•',
                        name: extForm.name,
                        amount: extTotal
                    });
                    setExtForm({ name: '', phone: '' });
                    setViewMode('success');

                } catch (error) {
                    alert("Ïã†Ï≤≠ Ï†ÑÏÜ° Ïã§Ìå®");
                    setIsSubmitting(false);
                }
            };

            const handleBackupSubmit = async () => {
                if (!backupForm.name || !backupForm.phone) {
                    alert("Ïã†Ï≤≠Ïûê ÏÑ±Ìï®Í≥º Ïó∞ÎùΩÏ≤òÎ•º ÏûÖÎ†•Ìï¥Ï£ºÏÑ∏Ïöî.");
                    return;
                }
                if(!GOOGLE_SCRIPT_URL) {
                    alert("ÏãúÏä§ÌÖú Ïò§Î•ò: Ïó∞Îèô URL ÎØ∏ÏÑ§Ï†ï");
                    return;
                }

                setIsSubmitting(true);
                const orderData = {
                    category: 'Î∞±ÏóÖÏã†Ï≤≠',
                    orderTime: new Date().toLocaleString('ko-KR'),
                    model: 'Îç∞Ïù¥ÌÑ∞ Î∞±ÏóÖ ÎåÄÌñâ',
                    name: backupForm.name,
                    phone: backupForm.phone,
                    totalPrice: 10000,
                    scheduleName: `${backupForm.name}Îãò Î∞±ÏóÖÏã†Ï≤≠`
                };

                try {
                    await fetch(GOOGLE_SCRIPT_URL, {
                        method: "POST",
                        headers: { "Content-Type": "text/plain;charset=utf-8" },
                        body: JSON.stringify(orderData),
                    });
                    
                    setSuccessData({
                        type: 'Î∞±ÏóÖ',
                        name: backupForm.name,
                        amount: 10000
                    });
                    setBackupForm({ name: '', phone: '' });
                    setViewMode('success');

                } catch (error) {
                    alert("Ïã†Ï≤≠ Ï†ÑÏÜ° Ïã§Ìå®");
                    setIsSubmitting(false);
                }
            };

            const handleLookup = async (nameParam, phoneParam, isRefresh = false) => {
                const targetName = nameParam || lookupName;
                const targetPhone = phoneParam || lookupPhone;

                if (!targetName || targetPhone.length < 10) { 
                    if (!nameParam) alert('Ï†ïÎ≥¥Î•º Ïò¨Î∞îÎ•¥Í≤å ÏûÖÎ†•Ìï¥Ï£ºÏÑ∏Ïöî.'); 
                    return; 
                }
                if (!GOOGLE_SCRIPT_URL) { alert("Ïó∞Îèô URLÏù¥ ÏÑ§Ï†ïÎêòÏßÄ ÏïäÏïòÏäµÎãàÎã§."); return; }
                
                setIsSearching(true);
                try {
                    const response = await fetch(`${GOOGLE_SCRIPT_URL}?name=${encodeURIComponent(targetName)}&phone=${encodeURIComponent(targetPhone)}`, { redirect: "follow" });
                    const result = await response.json();
                    
                    if (result.result === "success") { 
                        const rawData = result.data;
                        const dataArray = Array.isArray(rawData) ? rawData : (rawData ? [rawData] : []);
                        
                        setLookupResult([...dataArray].reverse()); 
                        localStorage.setItem('pink_user', JSON.stringify({ name: targetName, phone: targetPhone }));
                    }
                    else { 
                        if (!nameParam) {
                            alert("ÏùºÏπòÌïòÎäî ÏòàÏïΩ Ï†ïÎ≥¥Í∞Ä ÏóÜÏäµÎãàÎã§."); 
                            setLookupResult(null); 
                        }
                    }
                } catch (error) { 
                    if (!nameParam) alert("Ï°∞Ìöå Ï§ë Ïò§Î•òÍ∞Ä Î∞úÏÉùÌñàÏäµÎãàÎã§."); 
                } finally { 
                    setIsSearching(false); 
                }
            };
            
            const handleRefresh = async () => {
                if (lookupName && lookupPhone) {
                    await handleLookup(lookupName, lookupPhone, true); 
                }
            };

            const handleLogoutClick = () => {
                setIsLogoutModalOpen(true);
            };

            const handleLogoutConfirm = () => {
                localStorage.removeItem('pink_user');
                setLookupResult(null);
                setLookupName('');
                setLookupPhone('');
                setIsLogoutModalOpen(false);
            };

            const handleMonthChange = (increment) => {
                const newDate = new Date(currentMonth.getFullYear(), currentMonth.getMonth() + increment, 1);
                setCurrentMonth(newDate);
            };

            const handleDateClick = (day) => {
                const today = new Date(); today.setHours(0,0,0,0);
                const clickedDate = new Date(currentMonth.getFullYear(), currentMonth.getMonth(), day);
                if (clickedDate < today) return;
                
                if (!startDate || (startDate && endDate)) { 
                    setStartDate(clickedDate); 
                    setEndDate(null); 
                    setDateWarning(null); 
                } else {
                    let finalEndDate = new Date(clickedDate);
                    let warningMsg = null;
                    if (finalEndDate < startDate) { 
                        setStartDate(finalEndDate); 
                        setEndDate(null); 
                        setDateWarning(null); 
                    }
                    else {
                        setStartDate(startDate); 
                        setEndDate(finalEndDate); 
                        setDateWarning(warningMsg);
                    }
                }
            };

            const handleRentalStart = (method) => {
                if(method) setDeliveryMethod(method);
                else {
                    setDeliveryMethod(null);
                    setReturnMethod(null);
                }
                setViewMode('rental');
                setStep(1); 
                setActiveNav('rental'); 
            };

            const handleNavChange = (nav) => {
                setActiveNav(nav);
                if (nav === 'home') {
                    setViewMode('dashboard');
                } else if (nav === 'rental') {
                    handleRentalStart(); 
                } else if (nav === 'qna') {
                    setViewMode('qna');
                } else if (nav === 'mypage') {
                    setViewMode('lookup');
                }
            };

            useEffect(() => { window.scrollTo(0, 0); }, [step, viewMode, activeNav]);
            
            const renderLookupPage = () => (
                <div className="animate-slide-in space-y-6">
                    <div className="flex items-center gap-3 mb-6">
                        {activeNav !== 'mypage' && (
                            <button onClick={() => setViewMode('dashboard')} className="p-2 bg-white rounded-full shadow-sm">
                                <Icons.ChevronLeft className="w-5 h-5 text-gray-600" />
                            </button>
                        )}
                        <h2 className="text-xl font-bold text-gray-800">ÏòàÏïΩ Ï°∞Ìöå</h2>
                    </div>
                    <div className="bg-white p-6 rounded-3xl shadow-sm border border-gray-100">
                        {!lookupResult ? (
                            <div className="space-y-4">
                                <div className="text-center mb-6">
                                    <div className="w-16 h-16 bg-blue-50 rounded-full flex items-center justify-center mx-auto mb-4 text-blue-500">
                                        <Icons.User size={32} />
                                    </div>
                                    <h3 className="font-bold text-gray-800">ÏòàÏïΩÏûê Ï†ïÎ≥¥Î•º ÏûÖÎ†•Ìï¥Ï£ºÏÑ∏Ïöî</h3>
                                    <p className="text-xs text-gray-500 mt-1">ÏòàÏïΩ Ïãú ÏûÖÎ†•Ìïú ÏÑ±Ìï®Í≥º Ïó∞ÎùΩÏ≤òÎ°ú Ï°∞ÌöåÎê©ÎãàÎã§.</p>
                                </div>
                                <input type="text" placeholder="ÏÑ±Ìï®" className="w-full p-3 bg-gray-50 rounded-xl outline-none text-sm border border-transparent focus:border-blue-200 transition-colors" value={lookupName} onChange={(e) => setLookupName(e.target.value)} />
                                <input type="text" placeholder="Ïó∞ÎùΩÏ≤ò (010-0000-0000)" className="w-full p-3 bg-gray-50 rounded-xl outline-none text-sm border border-transparent focus:border-blue-200 transition-colors" value={lookupPhone} onChange={(e) => setLookupPhone(formatPhone(e.target.value))} onKeyPress={(e) => e.key === 'Enter' && handleLookup()}/>
                                <button onClick={() => handleLookup()} disabled={isSearching} className="w-full bg-blue-500 text-white py-4 rounded-xl font-bold shadow-md hover:bg-blue-600 transition-colors mt-2">
                                    {isSearching ? 'Ï°∞Ìöå Ï§ë...' : 'ÎÇ¥Ïó≠ Ï°∞ÌöåÌïòÍ∏∞'}
                                </button>
                            </div>
                        ) : (
                            <div className="space-y-4 animate-fade-in">
                                <div className="flex justify-between items-center mb-4 pb-2 border-b border-gray-100">
